/* pages/compensation/compensation.wxss */
page{
    background-color: #aedd81;
}
.body{
    margin: 25rpx;
}
.data{
    display: flex;
    flex-direction: column;
    padding-bottom: 30rpx;
    border-bottom:solid green 8rpx;
}
.data .part image{
    height: 50rpx;
    width: 50rpx;
    margin-right: 10rpx;
    position: relative;
    top: 10rpx;
}
.adv{
    margin-top: 50rpx;
}
.adv text{
    font-size: larger;
}
.adv .method{
    display: flex;
    justify-content: space-around;
}
.method view{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.method view image{
    width: 200rpx;
    height: 200rpx;
}
.method view text{
    font-size: medium;
}